<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC  
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"  
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<include file="struts-default.xml"></include>
	<constant name="struts.i18n.encoding" value="UTF-8" />

	<package name="Lab" extends="struts-default">
		<interceptors>
			<interceptor name="authority"
				class="cn.edu.jiangnan.lab.data.service.comm.AuthorityInterceptor">
			</interceptor>
			<interceptor name="exception"
				class="com.opensymphony.xwork.interceptor.ExceptionMappingInterceptor">
			</interceptor>
		</interceptors>
		<default-action-ref name="default" />
		<global-results>
			<result name="error">/error.jsp</result>
			<result name="index">/index.jsp</result>
			<result name="expired">/expired.jsp</result>
		</global-results>
		<global-exception-mappings>
			<exception-mapping result="error"
				exception="java.lang.Exception">
			</exception-mapping>
		</global-exception-mappings>
		<action name="default">
			<result type="redirect-action">index</result>
		</action>
		<action name="index">
			<result>/index.jsp</result>
		</action>
		<action name="login" class="loginAction">
			<result type="redirect-action">admin</result>
			<result name="input">/login.jsp</result>
		</action>
		<action name="elogin" class="loginAction">
			<result type="redirect-action">equip</result>
			<result name="input">/elogin.jsp</result>
		</action>
		<action name="app">
			<result>/app.jsp</result>
		</action>
		<action name="admin">
			<result>/admin.jsp</result>
			<result name="input">/login.jsp</result>
			<interceptor-ref name="defaultStack" />
			<interceptor-ref name="authority" />
		</action>
		<action name="equip">
			<result>/equip.jsp</result>
			<result name="input">/elogin.jsp</result>
			<interceptor-ref name="defaultStack" />
			<interceptor-ref name="authority" />
		</action>
		<action name="logout"
			class="cn.edu.jiangnan.lab.action.LogoutAction">
			<result name="admin">/login.jsp</result>
			<result name="equip">/elogin.jsp</result>
			<result name="index">/index.jsp</result>
		</action>
		<action name="log" class="logAction">
			<result>/admin.jsp</result>
			<result name="index_log">/index_log.jsp</result>
			<result name="log">/log.jsp</result>
		</action>
		<action name="equipview">
			<result>/equip_view.jsp</result>
		</action>
		<action name="notice" class="noticeAction">
			<result name="notice">/notice.jsp</result>
			<result name="index_notice">/index_notice.jsp</result>
			<result name="input">/index.jsp</result>
		</action>
		<action name="feedbacksave" class="feedbackAction"
			method="save">
			<result type="redirect-action">
				feedback!list?from=form
			</result>
			<result name="input">/form_feedback.jsp</result>
		</action>
		<action name="feedback" class="feedbackAction">
			<result>/index_feedback.jsp</result>
			<result name="feedback">/feedback.jsp</result>
			<result name="input">/index.jsp</result>
		</action>
		<action name="detail" class="detailAction">
			<result>/detail.jsp</result>
			<result name="input">/detail.jsp</result>
		</action>
		<action name="download"
			class="cn.edu.jiangnan.lab.action.FileDownloadAction">
			<param name="allowTypes">xls,doc,pdf,ppt,rar,zip</param>
			<result name="success" type="stream">
				<param name="contentType">
					application/octet-stream;charset=UTF-8
				</param>
				<param name="inputName">inputStream</param>
				<param name="contentDisposition">
					attachment;filename="${name}"
				</param>
				<param name="bufferSize">4096</param>
			</result>
			<result name="index_download">/index_download.jsp</result>
			<result name="error404">/index_error404.jsp</result>
		</action>
	</package>
</struts>