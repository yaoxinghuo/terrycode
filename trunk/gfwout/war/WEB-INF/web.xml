<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	
	<servlet>
		<servlet-name>gfw</servlet-name>
		<servlet-class>com.terry.gfwout.servlet.GfwServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>gfw</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>greetServlet</servlet-name>
    <servlet-class>com.terry.gfwout.server.GreetingServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>greetServlet</servlet-name>
    <url-pattern>/gfwout/greet</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>Gfwout.html</welcome-file>
  </welcome-file-list>

</web-app>
