<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC
        "-//OpenSymphony Group//XWork Validator 1.0.2//EN"
        "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">
<validators>
	<field name="no">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>工号/学号 不能为空！</message>
		</field-validator>
	</field>
	<field name="password">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>密码 不能为空！</message>
		</field-validator>
	</field>
	<field name="contact">
		<field-validator type="stringlength">
			<param name="maxLength">50</param>
			<message>联系方式 长度不能超过 ${maxLength} 个字符.</message>
		</field-validator>
	</field>
	<field name="title">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>标题 不能为空！</message>
		</field-validator>
		<field-validator type="stringlength">
			<param name="maxLength">30</param>
			<message>标题 长度不能超过 ${maxLength} 个字符.</message>
		</field-validator>
	</field>
	<field name="content">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>描述内容 不能为空！</message>
		</field-validator>
		<field-validator type="stringlength">
			<param name="maxLength">500</param>
			<message>描述内容 长度不能超过 ${maxLength} 个字符.</message>
		</field-validator>
	</field>
	<!-- <field name="validate">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>验证码 不能为空！</message>
		</field-validator>
	</field>-->
</validators>